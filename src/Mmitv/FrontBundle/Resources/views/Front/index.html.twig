			function isset ()
				{

				  var a = arguments,
				    l = a.length,
				    i = 0,
				    undef;

				  if (l === 0)
				  {
				    throw new Error('Empty isset');
				  }

				  while (i !== l)
				  {
				    if (a[i] === undef || a[i] === null)
				    {
				      return false;
				    }
				    i++;
				  }
				  return true;
				}


				// on récupere la date toutes les 5 secondes pour l'afficher dans la div #heure dans la nav
				$(function(){

					date = new Date();

					h = date.getHours();
				    if(h<10)
