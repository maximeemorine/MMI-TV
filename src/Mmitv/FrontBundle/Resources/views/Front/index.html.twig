								h = date.getHours();
						        if(h<10)
						        {
						                h = "0"+h;
						        }

						        m = date.getMinutes();
						        if(m<10)
						        {
						                m = "0"+m;
						        }

						        // On calcule le créneau en cours
						        if(h>=7 && h<9){
						        	creneau= '1';
						        }

